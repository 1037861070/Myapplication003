<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/student_bg2">
    <!-- padding 内边距   layout_margin 外边距
        android:layout_alignParentTop 布局的位置是否处于顶部 -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:background="@drawable/title_tyle"
            android:ems="10"
            android:gravity="center"
            android:inputType="text|textPersonName"
            android:text="注册"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>



    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"

        android:background="@drawable/background_login_div_bg"
        android:padding="15dip">
        <!-- 账号 -->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon_1" />

        <EditText
            android:id="@+id/register_inoutusername"
            android:layout_width="fill_parent"
            android:layout_height="35dp"

            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2"
            android:background="@drawable/background_login_div_bg"
            android:hint="姓名由6-15位数字加字母组成"
            android:inputType="text"
            android:singleLine="true" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/register_inputpsd"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_3" />
        <EditText
            android:id="@+id/register_inputidnumber"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:layout_alignStart="@+id/register_inputclass"
            android:layout_below="@+id/register_inputclass"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_login_div_bg"
            android:hint="学号由13位数字组成"
            android:inputType="text"
            android:singleLine="true" />
        <!-- 密码 text -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/register_inputpsd"
            android:layout_alignParentStart="true"
            android:background="@drawable/test" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/register_inputidnumber"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_2" />

        <EditText
            android:id="@+id/register_inputclass"
            android:layout_width="fill_parent"
            android:layout_height="35dp"

            android:layout_alignStart="@+id/register_inoutusername"
            android:layout_below="@+id/register_inoutusername"
            android:layout_marginTop="19dp"
            android:background="@drawable/background_login_div_bg"
            android:hint="班级(4-15位)"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/register_inputpsd"
            android:layout_width="fill_parent"
            android:layout_height="35dp"

            android:layout_alignStart="@+id/register_inputidnumber"
            android:layout_below="@+id/register_inputidnumber"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_login_div_bg"
            android:hint="密码由6-15位数字加字母组成"
            android:inputType="text"
            android:password="true"
            android:singleLine="true" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/register_input_aginpsd"
            android:layout_alignParentStart="true"
            android:background="@drawable/test" />
        <EditText
            android:id="@+id/register_input_aginpsd"
            android:layout_width="fill_parent"
            android:layout_height="35dp"

            android:layout_alignStart="@+id/register_inputpsd"
            android:layout_below="@+id/register_inputpsd"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_login_div_bg"
            android:hint="再次输入密码"
            android:inputType="text"
            android:password="true"
            android:singleLine="true" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/register_inputimage"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_5" />
        <EditText
            android:id="@+id/register_inputimage"
            android:layout_width="200dp"
            android:layout_height="35dp"

            android:layout_alignStart="@+id/register_input_aginpsd"
            android:layout_below="@+id/register_input_aginpsd"
            android:layout_marginTop="14dp"
            android:background="@drawable/background_login_div_bg"
            android:hint="上传人脸照片"
            android:inputType="text"
            android:editable="false"
            android:singleLine="true" />

        <Button
            android:id="@+id/register_uploadimage"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/register_inputimage"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:text="选择文件"

            android:textColor="#9400D3" />


        <!-- 登录button -->
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="62dp">

        <Button
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:background="@drawable/button_style"
            android:text="返回" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/register_back"
            android:layout_alignBottom="@+id/register_back"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:background="@drawable/button_style"
            android:text="确定" />
    </RelativeLayout>

</LinearLayout>